{
  "root": true,
  "extends": [
    "teppeis/node-v14",
    "teppeis/+typescript",
    "teppeis/+prettier",
    "teppeis/+mocha"
  ],
  "overrides": [
    {
      "files": ["**/*.ts"],
      "rules": {
        "node/no-missing-import": [
          "error",
          {
            "allowModules": ["estree-jsx"]
          }
        ]
      }
    },
    {
      "files": ["**/*.d.ts"],
      "rules": {
        "node/no-missing-import": [
          "error",
          {
            "allowModules": ["estree"]
          }
        ],
        "node/no-extraneous-import": [
          "error",
          {
            "allowModules": ["estraverse"]
          }
        ]
      }
    }
  ]
}
