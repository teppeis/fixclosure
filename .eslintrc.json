{
  "extends": ["teppeis/node-v10", "teppeis/+typescript", "teppeis/+prettier", "teppeis/+mocha"],
  "rules": {
    "no-sync": "off"
  },
  "overrides": [
    {
      "files": ["test/**/*.js"],
      "rules": {
        "no-unused-expressions": "off"
      }
    },
    {
      "files": ["**/*.ts"],
      "rules": {
        "node/no-missing-import": [
          "error",
          {
            "allowModules": ["estree", "estree-jsx"]
          }
        ]
      }
    }
  ]
}
