{
  "name": "fixclosure",
  "description": "JavaScript dependency checker/fixer for Closure Library based on ECMAScript AST",
  "version": "3.0.0",
  "author": "Teppei Sato <teppeis@gmail.com>",
  "engines": {
    "node": ">=14"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "fixclosure": "./bin/fixclosure.js"
  },
  "files": [
    "bin",
    "lib",
    "types"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf lib .tsbuildinfo .nyc_output coverage",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "fix": "run-s fix:prettier fix:eslint",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write",
    "test": "run-s clean build lint:* unit:coverage",
    "unit": "mocha",
    "unit:coverage": "nyc --reporter=html --reporter=text mocha"
  },
  "dependencies": {
    "@teppeis/doctrine": "^3.2.0",
    "@types/cli-color": "^2.0.2",
    "@types/estree": "0.0.52",
    "cli-color": "^2.0.3",
    "commander": "^9.3.0",
    "espree": "^9.3.2",
    "estraverse-fb": "^1.3.2",
    "globby": "^13.1.2",
    "google-closure-deps": ">=20190325.0.0",
    "lodash.difference": "^4.5.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/estraverse": "5.1.1",
    "@types/lodash.difference": "^4.5.7",
    "@types/mocha": "^9.1.1",
    "@types/node": "^14.18.21",
    "@types/sinon": "^10.0.12",
    "chai": "^4.3.6",
    "coveralls": "^3.1.1",
    "eslint": "^8.18.0",
    "eslint-config-teppeis": "^15.0.1",
    "mocha": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "sinon": "^14.0.0",
    "tempy": "^3.0.0",
    "ts-node": "^10.8.2",
    "ts-node-test-register": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "repository": "https://github.com/teppeis/fixclosure",
  "license": "MIT"
}
