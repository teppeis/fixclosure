{
  "name": "fixclosure",
  "description": "JavaScript dependency checker/fixer for Closure Library based on ECMAScript AST",
  "version": "4.0.1",
  "author": "Teppei Sato <teppeis@gmail.com>",
  "engines": {
    "node": ">=18"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "fixclosure": "./bin/fixclosure.js"
  },
  "files": [
    "bin",
    "lib",
    "types"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf lib .tsbuildinfo .nyc_output coverage",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "fix": "run-s fix:prettier fix:eslint",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write",
    "test": "run-s clean build lint:* unit:coverage",
    "unit": "mocha",
    "unit:coverage": "nyc --reporter=html --reporter=text mocha"
  },
  "dependencies": {
    "@teppeis/doctrine": "^3.2.0",
    "@types/cli-color": "^2.0.3",
    "@types/estree": "1.0.2",
    "@types/estree-jsx": "^1.0.1",
    "cli-color": "^2.0.3",
    "commander": "^11.0.0",
    "espree": "^9.6.1",
    "estraverse-fb": "^1.3.2",
    "globby": "^13.2.2",
    "google-closure-deps": ">=20190325.0.0",
    "lodash.difference": "^4.5.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.6",
    "@types/estraverse": "5.1.4",
    "@types/lodash.difference": "^4.5.7",
    "@types/mocha": "^10.0.2",
    "@types/node": "^18.17.19",
    "@types/sinon": "^10.0.17",
    "chai": "^4.3.9",
    "coveralls": "^3.1.1",
    "eslint": "^8.49.0",
    "eslint-config-teppeis": "^17.0.4",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "sinon": "^15.2.0",
    "tempy": "^3.1.0",
    "ts-node": "^10.9.1",
    "ts-node-test-register": "^10.0.0",
    "typescript": "^5.2.2"
  },
  "repository": "https://github.com/teppeis/fixclosure",
  "license": "MIT"
}
